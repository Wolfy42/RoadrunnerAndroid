<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
   android:orientation="vertical"
   android:layout_width="fill_parent"
   android:layout_height="fill_parent">
  
   <com.markupartist.android.widget.ActionBar
	    android:id="@+id/actionbar"
	    style="@style/ActionBar"/>
  
  <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:padding="6dip">
        
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <Button android:id="@+id/roadrunner_btn_scan"
                style="@style/NavigationButton"
                android:onClick="onScanClick"
                android:text="@string/roadrunner_scan"
                android:drawableTop="@drawable/ic_roadrunner_btn_scan"/>
            <Button android:id="@+id/roadrunner_btn_deliveries"
                style="@style/NavigationButton"
                android:onClick="onDeliveriesClick"
                android:text="@string/roadrunner_deliveries"
                android:drawableTop="@drawable/ic_roadrunner_btn_deliveries"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
