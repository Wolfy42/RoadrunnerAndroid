<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      package="at.roadrunner.android"
      android:versionCode="1"
      android:versionName="1.0">
      
      <uses-sdk
        android:minSdkVersion="7"
        android:targetSdkVersion="7" />
        
      <uses-permission android:name="android.permission.INTERNET" />
      <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"  />

    <application android:icon="@drawable/icon" android:label="@string/app_name" android:debuggable="true">
    	<!-- Services -->
    	<service android:name=".service.MonitoringService" />
    	
        <!-- Roadrunner Activity -->
        <activity android:name=".activity.Roadrunner"
        		  android:theme="@style/Theme.Roadrunner"
                  android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <!-- Items Activity -->
        <activity android:name=".activity.Items"
        		  android:theme="@style/Theme.Roadrunner"
                  android:label="@string/items_title">
        </activity>
        
        <!-- Settings Activity -->
        <activity android:name=".activity.Settings"
        		  android:theme="@style/Theme.Roadrunner"
                  android:label="@string/pref_title">
        </activity>
		
		<!-- Info Activity -->
        <activity android:name=".activity.Info"
        		  android:theme="@style/Theme.Roadrunner"
                  android:label="@string/info_title">
        </activity>
        
        <!-- SystemTest Activity -->
        <activity android:name=".activity.SystemTest"
        		  android:theme="@style/Theme.Roadrunner"
                  android:label="@string/systemtest_title">
        </activity>
        
        <!-- MonitoringServiceController Activity -->
        <activity android:name=".activity.MonitoringController"
        		  android:theme="@style/Theme.Roadrunner"
                  android:label="@string/monitoring_controller_title">
        </activity>
    </application>
</manifest>